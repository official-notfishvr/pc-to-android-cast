<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textColor="@color/connect_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scale_label"
            android:textColor="@color/panel_text"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">
            <SeekBar
                android:id="@+id/seekScale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="75"
                android:progress="75" />
            <TextView
                android:id="@+id/textScaleValue"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:textColor="@color/connect_title"
                android:textSize="14sp"
                android:gravity="end" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quality_label"
            android:textColor="@color/panel_text"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">
            <SeekBar
                android:id="@+id/seekQuality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="99"
                android:progress="74" />
            <TextView
                android:id="@+id/textQualityValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@color/connect_title"
                android:textSize="14sp"
                android:gravity="end" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fps_label"
            android:textColor="@color/panel_text"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp">
            <SeekBar
                android:id="@+id/seekFps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="59"
                android:progress="19" />
            <TextView
                android:id="@+id/textFpsValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@color/connect_title"
                android:textSize="14sp"
                android:gravity="end" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30FFFFFF"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/when_zoomed"
            android:textColor="@color/panel_title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quality_zoomed_label"
            android:textColor="@color/panel_text"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp">
            <SeekBar
                android:id="@+id/seekQualityZoomed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="0" />
            <TextView
                android:id="@+id/textQualityZoomedValue"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:textColor="@color/connect_title"
                android:textSize="13sp"
                android:gravity="end" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fps_zoomed_label"
            android:textColor="@color/panel_text"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp">
            <SeekBar
                android:id="@+id/seekFpsZoomed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="60"
                android:progress="0" />
            <TextView
                android:id="@+id/textFpsZoomedValue"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:textColor="@color/connect_title"
                android:textSize="13sp"
                android:gravity="end" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/close"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/accent"
            app:cornerRadius="12dp" />
    </LinearLayout>
</ScrollView>
