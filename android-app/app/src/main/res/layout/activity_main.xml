<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Connect screen -->
    <LinearLayout
        android:id="@+id/connectPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp"
        android:minWidth="320dp"
        android:background="@drawable/connect_panel_background"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/connect_title"
            android:textSize="26sp"
            android:letterSpacing="0.02"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_subtitle"
            android:textColor="@color/connect_hint"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tipHotspot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_hotspot"
            android:textColor="@color/connect_hint"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editIp"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:hint="@string/hint_ip"
                android:inputType="text"
                android:maxLines="1"
                android:minWidth="140dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/connect_text"
                android:textColorHint="@color/connect_hint"
                android:textSize="15sp"
                android:background="@drawable/edit_background" />

            <EditText
                android:id="@+id/editPort"
                android:layout_width="76dp"
                android:layout_height="52dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/hint_port"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="9090"
                android:textColor="@color/connect_text"
                android:textColorHint="@color/connect_hint"
                android:textSize="15sp"
                android:background="@drawable/edit_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConnect"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:minWidth="120dp"
                android:text="@string/connect"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textAllCaps="false"
                app:backgroundTint="@color/accent"
                app:cornerRadius="12dp"
                android:paddingHorizontal="24dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStreamSettings"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/stream_settings"
            android:textColor="@color/connect_hint"
            android:textSize="14sp"
            android:textAllCaps="false"
            app:backgroundTint="@android:color/transparent" />
    </LinearLayout>

    <!-- Stream view -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/streamContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/background_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.pcscreencast.ZoomableStreamView
            android:id="@+id/imageStream"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="Screen stream"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Top bar: options hint + keyboard toggle -->
        <LinearLayout
            android:id="@+id/streamOptionsBar"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#CC000000"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tap_for_options"
                android:textColor="@color/panel_text"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKeyboardToggle"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="âŒ¨"
                android:textColor="@color/accent"
                android:textSize="20sp"
                app:backgroundTint="@android:color/transparent" />
        </LinearLayout>

        <View
            android:id="@+id/controlsDismissOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Options panel (compact) -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/controlsPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:background="@drawable/panel_background"
            android:elevation="8dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp"
                android:minWidth="160dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/options"
                    android:textColor="@color/panel_title"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minWidth="120dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:text="@string/zoom" android:textColor="@color/panel_text" android:textSize="14sp" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchZoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:minWidth="120dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:text="@string/clicks" android:textColor="@color/panel_text" android:textSize="14sp" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchClicks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:minWidth="120dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                        android:text="@string/tap_right" android:textColor="@color/panel_text" android:textSize="14sp" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchTapRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp"
                    android:gravity="center">
                    <com.google.android.material.button.MaterialButton android:id="@+id/btnZoomOut"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1"
                        android:layout_marginEnd="4dp" android:text="@string/zoom_out"
                        android:textColor="@color/connect_title" android:textSize="12sp" android:textAllCaps="false"
                        app:strokeColor="#40475569" app:strokeWidth="1dp" app:backgroundTint="@color/surface_elevated" app:cornerRadius="10dp" />
                    <com.google.android.material.button.MaterialButton android:id="@+id/btnResetZoom"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1"
                        android:layout_marginEnd="4dp" android:text="@string/reset_zoom"
                        android:textColor="@color/connect_title" android:textSize="12sp" android:textAllCaps="false"
                        app:strokeColor="#40475569" app:strokeWidth="1dp" app:backgroundTint="@color/surface_elevated" app:cornerRadius="10dp" />
                    <com.google.android.material.button.MaterialButton android:id="@+id/btnZoomIn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1"
                        android:text="@string/zoom_in"
                        android:textColor="@color/connect_title" android:textSize="12sp" android:textAllCaps="false"
                        app:strokeColor="#40475569" app:strokeWidth="1dp" app:backgroundTint="@color/surface_elevated" app:cornerRadius="10dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Text input overlay: EditText + Close -->
        <LinearLayout
            android:id="@+id/textInputOverlayContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/panel_background"
            android:elevation="12dp"
            android:minWidth="240dp"
            android:maxWidth="360dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/textInput"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="@string/keyboard_hint"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/connect_title"
                android:textColorHint="@color/connect_hint"
                android:textSize="14sp"
                android:background="@drawable/edit_background" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTextInputClose"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="56dp"
                android:text="@string/close"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:backgroundTint="@color/accent"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Loading overlay -->
    <LinearLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/accent" />

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/loading"
            android:textColor="@color/connect_title"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
