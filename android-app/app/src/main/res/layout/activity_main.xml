<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/connectPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/connect_panel_background"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/connect_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_subtitle"
            android:textColor="@color/connect_hint"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tipHotspot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_hotspot"
            android:textColor="@color/connect_hint"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editIp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="@string/hint_ip"
                android:inputType="text"
                android:maxLines="1"
                android:minWidth="140dp"
                android:padding="12dp"
                android:textColor="@color/connect_text"
                android:textColorHint="@color/connect_hint"
                android:background="@drawable/edit_background" />

            <EditText
                android:id="@+id/editPort"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:hint="@string/hint_port"
                android:inputType="number"
                android:maxLines="1"
                android:padding="12dp"
                android:text="9090"
                android:textColor="@color/connect_text"
                android:textColorHint="@color/connect_hint"
                android:background="@drawable/edit_background" />

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/connect"
                android:paddingHorizontal="20dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/streamContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.pcscreencast.ZoomableStreamView
            android:id="@+id/imageStream"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Screen stream" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnToggleControls"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:background="@drawable/btn_float_circle"
            android:contentDescription="@string/toggle_controls"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_preferences"
            app:tint="#E0FFFFFF" />

        <LinearLayout
            android:id="@+id/controlsPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/panel_background"
            android:elevation="6dp"
            android:visibility="gone"
            android:minWidth="140dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Controls"
                android:textColor="#E0FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minWidth="120dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/zoom"
                    android:textColor="#E0FFFFFF"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchZoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:minWidth="120dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/clicks"
                    android:textColor="#E0FFFFFF"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchClicks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:minWidth="120dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_right"
                    android:textColor="#E0FFFFFF"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchTapRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>

            <Button
                android:id="@+id/btnResetZoom"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:text="@string/reset_zoom"
                android:textSize="13sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="#FFFFFF" />

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/loading"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
